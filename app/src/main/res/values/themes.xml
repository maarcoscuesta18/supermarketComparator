<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SupermarketComparator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8C9EFF</item>
        <item name="colorPrimaryVariant">#82B1FF</item>
        <item name="colorOnPrimary">#80D8FF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SupermarketComparator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="samsungfontdrawer" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/samsungsansmedium</item>
    </style>

    <style name="Theme.SupermarketComparator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SupermarketComparator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>