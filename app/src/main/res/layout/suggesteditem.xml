<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:background="@drawable/cartshadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/circleView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

        <TextView  android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="15dp"
            android:fontFamily="@font/samsungsharpsansbold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@id/circleView"
            android:layout_marginHorizontal="5dp"
            android:scaleType="fitXY"/>

        <TextView android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:paddingVertical="5dp"
            android:fontFamily="@font/samsungone700"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_marginHorizontal="5dp"
            android:layout_toRightOf="@id/circleView"
            android:layout_below="@id/product_name"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/priceperkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/samsungsansmedium"
            android:scaleType="fitXY"
            android:textSize="13dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="5dp"
            android:text="Price Per kg/l/unit: "
            android:layout_toRightOf="@id/circleView"
            android:layout_below="@id/price"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>