<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:background="@drawable/cartshadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/circleView"
                android:src="@drawable/ic_baseline_control_point_duplicate_24"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView  android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona un Producto"
                android:textSize="15dp"
                android:fontFamily="@font/samsungsharpsansbold"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="6dp"
                android:scaleType="fitXY"/>

            <TextView android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----"
                android:paddingVertical="8dp"
                android:fontFamily="@font/samsungone700"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/priceperkg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/samsungsansmedium"
                android:scaleType="fitXY"
                android:textSize="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="15dp"
                android:text="-----" />
            <TextView
                android:id="@+id/supermarket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/samsungsansmedium"
                android:scaleType="fitXY"
                android:textSize="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="5dp"
                android:text="Supermercado: ------" />
            <Button android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                android:text="UPDATE"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>